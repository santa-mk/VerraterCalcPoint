<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="@dimen/player_padding">

    <ImageView
        android:layout_width="@dimen/family_icon_size"
        android:layout_height="@dimen/family_icon_size"
        android:id="@+id/family"
        android:src="@drawable/eagle"
        android:background="@color/green"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:padding="@dimen/player_color_padding" />

    <EditText
        android:layout_width="@dimen/player_conflict_width"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/player_conflict"
        android:text="0"
        android:layout_weight="5"
        android:layout_gravity="center" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Player"
        android:ems="10"
        android:id="@+id/player_name"
        android:layout_weight="1"
        android:layout_gravity="center" />

</LinearLayout>
